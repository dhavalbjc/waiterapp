<?xml version="1.0" encoding="utf-8"?> 
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    	android:background="#DCE1E3">
<LinearLayout

	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:paddingBottom="15dp"
	android:background="#DCE1E3">
	
    
<FrameLayout
	
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		
	android:gravity="center"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp"
	android:layout_marginTop="8dp"
	android:background="@drawable/item_back"
		>
		 <TextView
	        android:id="@+id/bill_table"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       android:layout_gravity="center_horizontal"
	        android:layout_centerVertical="true"
	        android:text="Unpaid"
	         android:textColor="#505050"
	         android:singleLine="true" 
	         android:textStyle="bold"
	        android:textSize="20dp"
	         />
	
	   
   
</FrameLayout>
    <RelativeLayout

	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:layout_alignParentLeft="true"
	android:background="#DCE1E3">

    <ListView
		 android:id="@+id/payment_listview"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:listSelector="@android:color/transparent"
		android:cacheColorHint="@android:color/transparent"
		android:divider="@null"
		 />
</RelativeLayout>
<LinearLayout
	android:id="@+id/linear_service_charge"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	 android:orientation="horizontal"
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
	>

	<RelativeLayout
	    
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		 android:layout_weight=".28"
		android:paddingLeft="15dp"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:paddingRight="5dp"
		android:background="@drawable/item_back"
		>

	

	    <TextView
	        android:id="@+id/service_charge"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Service Charge " 
	        android:textSize="20dp" 
	         android:textColor="#505050"
	         android:singleLine="true"/>
	        <!--  android:textAppearance="?android:attr/textAppearanceLarge"-->
	        

	   

	</RelativeLayout>
	<RelativeLayout
	    
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		 android:layout_weight=".72"
		
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:paddingRight="15dp"
		android:background="@drawable/item_back"
		>
	     <TextView
	        android:id="@+id/service_charge_amt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:text="0.0"
	         android:textColor="#505050"
	         android:singleLine="true" 
	        android:textSize="20dp"
	         />
	     </RelativeLayout>

</LinearLayout>
    
<LinearLayout
	
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	 android:orientation="horizontal"
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
	>

	<RelativeLayout
	    android:id="@+id/Rel_item_select"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		 android:layout_weight=".28"
		android:paddingLeft="15dp"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:paddingRight="5dp"
		android:background="@drawable/item_back"
		>

	

	    <TextView
	        android:id="@+id/item_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Total " 
	         android:textColor="#505050"
	        android:textSize="20dp" 
	         android:singleLine="true"/>
	        <!--  android:textAppearance="?android:attr/textAppearanceLarge"-->
	        

	   

	</RelativeLayout>
	<RelativeLayout
	    android:id="@+id/Rel_price_select"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		 android:layout_weight=".72"
		
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:paddingRight="15dp"
		android:background="@drawable/item_back"
		>
	     <TextView
	        android:id="@+id/bill_total"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:text="0.0"
	         android:textColor="#505050"
	         android:singleLine="true" 
	        android:textSize="20dp"
	         />
	     </RelativeLayout>

</LinearLayout>

<LinearLayout
    android:id="@+id/lin_hide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/item_back"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <Button
        android:id="@+id/btn_print"
        android:layout_width="0dp"
        android:layout_weight="1"
       
      
       android:layout_height="match_parent"
       android:background="@drawable/button_selector_green"
        android:textColor="@drawable/button_text_color_green"
          android:layout_marginRight="2dp"
       android:textSize="20dp"
        
  android:padding="0dp"
    android:text="Print" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="0dp"
        android:layout_weight="1"
     
        android:layout_height="match_parent"
       android:background="@drawable/button_selector_green"
        android:textColor="@drawable/button_text_color_green"
          android:layout_marginLeft="2dp"
        android:textSize="20dp"
    android:text="Pay" />


</LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:id="@+id/Payment_option"
    android:background="#DCE1E3"
    
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
     android:layout_marginRight="8dp"
		>


<LinearLayout
    android:id="@+id/lin_back"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_marginRight="4dp"
     android:layout_weight="1"
     android:gravity="center"
     android:background="@drawable/newbackground"
     android:orientation="vertical" >

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:alpha="0.5"
         android:paddingRight="5dp"
         android:src="@drawable/back1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:alpha="0.9"
        android:padding="0dp"
        android:text="Back"
        android:textColor="#505050"
        android:textSize="20dp" />

    </LinearLayout>
 
 <LinearLayout
     android:id="@+id/lin_pay"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_marginLeft="4dp"
     android:layout_weight="1"
      android:gravity="center"
     android:background="@drawable/newbackground"
     android:orientation="vertical" >

     <ImageView
   
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/payment1" 
         android:alpha="0.9"
         android:paddingRight="5dp"
         android:layout_gravity="center"/>
    <TextView
       
         android:layout_width="wrap_content"
           android:layout_gravity="center"
        android:layout_height="match_parent"
       android:alpha="0.9"
         android:textColor="#505050"
         
        android:textSize="20dp"
    android:text="Pay" />

</LinearLayout>
 <LinearLayout
     android:id="@+id/lin_print"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_marginLeft="4dp"
     android:layout_weight="1"
     android:gravity="center"
     android:background="@drawable/newbackground"
     android:orientation="vertical" >

     <ImageView
        
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:alpha="0.6"
         android:paddingRight="5dp"
         android:src="@drawable/printer4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:alpha="0.9"
        android:padding="0dp"
        android:text="Print"
        android:textColor="#505050"
        android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>
