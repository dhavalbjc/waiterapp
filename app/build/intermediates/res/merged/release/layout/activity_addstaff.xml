<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     android:background="#DCE1E3"
    android:padding="10dp"
    >
    
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
          
             
            
              android:background="@drawable/item_back_selector"
         android:orientation="horizontal" >

         <TextView
             
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="15dp"
             android:text="Name"
             
             android:textSize="18dp" 
              />

         <EditText
             android:id="@+id/et_staff_Name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="15dp"
             android:background="@null"
             android:ems="15"
			 android:hint="..."
             android:gravity="right"
             android:layout_alignParentRight="true"
             android:textSize="18dp" >
             <requestFocus></requestFocus>
             </EditText>
     </LinearLayout>
        <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
 
             
              android:background="@drawable/item_back_selector"
         android:orientation="horizontal" >

         <TextView
             
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
             android:layout_marginLeft="10dp"
              
             android:layout_marginRight="15dp"
             android:text="Email"
             android:textSize="18dp"
                />

         <EditText
             android:id="@+id/et_staffemail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="15dp"
             android:background="@null"
             android:ems="15"
             android:hint="..."
              
              android:gravity="right"
             android:layout_alignParentRight="true"
             android:textSize="18dp" >
             
             </EditText>
     </LinearLayout>


             <LinearLayout
         android:id="@+id/linearroll"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
           android:background="@drawable/item_back_selector"
         android:orientation="horizontal" >

         <TextView
             
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="15dp"
             android:text="Role"
             
             android:textSize="18dp" 
             />

         <TextView
             android:id="@+id/tv_roll"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="15dp"
             android:background="@null"
             android:text="waiter"
             android:clickable="false"
             android:focusableInTouchMode="false" 
             android:cursorVisible="false"
             android:ems="15"
             android:alpha="0.8"
             android:hint="Enter here"
             android:gravity="right"
             android:layout_alignParentRight="true"
             android:textSize="18dp" />
     </LinearLayout>
   
<RelativeLayout
       android:id="@+id/Rel_Reg"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"      
       android:orientation="vertical"      
		>

 <Button
     android:id="@+id/staffbtnAdd"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:background="@drawable/sqrbtn_selector"
     android:paddingTop="1dp"
     android:text="ADD"
     android:textColor="@drawable/button_text_color_green"
     android:textSize="18dip"
     android:textStyle="bold" />

</RelativeLayout>

</LinearLayout>