<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:id="@+id/lin_layout" 
    >
 <RelativeLayout
        android:id="@+id/Rel_Item_plus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
         android:layout_weight=".15"
          
        
     android:background="@drawable/newbackground_small_corners"
        android:orientation="vertical"
        >
 
        <TextView
            android:id="@+id/tv_no_pluse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            
android:textColor="#505050"
             android:textSize="20dp"
                 />

    </RelativeLayout>
    
    <RelativeLayout
         android:id="@+id/Rel_no_item_click"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:background="@drawable/newbackground_small_corners"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="11dp" >

        <TextView
            android:id="@+id/tv_no_itemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tex1"    
            
android:textColor="#505050"       
           android:textSize="20dp"
                  
            />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rel_Item_minus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".15"
        android:background="@drawable/newbackground_small_corners"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

       <ImageView
        android:id="@+id/is_add_button"
        android:alpha="0.8"
           android:layout_width="20dp"		
        android:layout_height="15dp"
       
     android:layout_centerInParent="true"
     
        android:src="@drawable/minus_arrow" />

    </RelativeLayout>

</LinearLayout>