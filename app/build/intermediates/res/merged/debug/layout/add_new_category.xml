<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     
      
        android:gravity="center_vertical|center_horizontal"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F92D2"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/tv_add_new_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Add new Category"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

          <RelativeLayout
       android:id="@+id/no_need_Rel_add_new_Category"
      android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	android:paddingLeft="10dp"
	android:background="#FFFFFF"
        android:paddingTop="13dp"
         android:paddingBottom="13dp" 
		 >
       
       
        <EditText
               android:id="@+id/et_new_category"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ems="10"
                android:textColor="#505050"
               android:background="#FFFFFF"
               android:hint="name..." 
               android:textSize="20dp">

               <requestFocus />
           </EditText>
         </RelativeLayout>
         
           <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >

    <RelativeLayout
        android:layout_width="0dp"
          android:id="@+id/Rel_Cancel_Category_btn"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:background="@drawable/btn_back_selector"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
         android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tv_cancel_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
          android:textColor="#505050"
             android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp"
            
           />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rel_add_category_btn"
        android:layout_width="0dp"
          android:background="@drawable/btn_back_selector"
        android:layout_height="match_parent"
         android:layout_weight=".50"
          android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
          android:enabled="false"
        android:gravity="center_horizontal" 
       
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Add"
              android:textColor="#505050"
             android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp"
            />

    </RelativeLayout>

</LinearLayout>

    

        <!-- 
    
    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#454545"/>

     -->

           
   
</LinearLayout>