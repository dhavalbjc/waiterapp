<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
     android:gravity="center_vertical|center_horizontal"
      
        android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="#3F92D2"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/tv_titleforprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
             android:text="price for item"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>

          <RelativeLayout
       android:id="@+id/Rel_item_price"
      android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:paddingBottom="13dip"
        android:paddingLeft="10dip"
         android:paddingTop="13dip"
		 >
       
       
        <EditText
               android:id="@+id/et_item_price"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#FFFFFF"
               android:ems="10"
               android:inputType="numberDecimal"
               android:textSize="20dp" >

               <requestFocus />
           </EditText>
         </RelativeLayout>
         
           <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >

    <RelativeLayout
        android:id="@+id/Rel_Cancel_price_btn"
          android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:background="@drawable/btn_back_selector"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
         android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_pricecancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
             android:textColor="#505050"
            android:textSize="20dp"
           
           />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rel_save_price_btn"
        android:layout_width="0dp"
          android:layout_height="match_parent"
        android:layout_weight=".50"
         android:background="@drawable/btn_back_selector"
          android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
       
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="save"
             android:textColor="#505050"
            android:textSize="20dp"
             />

    </RelativeLayout>

</LinearLayout>

    

        <!-- 
    
    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#454545"/>

     -->

           
   
</LinearLayout>