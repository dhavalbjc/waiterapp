<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_layout_noExtra"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:weightSum="100" >
     <RelativeLayout
        android:id="@+id/Rel_Extra_blank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@drawable/newbackground"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:visibility="invisible"
        >
        
            
			 <TextView
            android:id="@+id/tv_noextra_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            
android:textColor="#505050"
            android:textSize="20dp" />
        
     
    </RelativeLayout>
 <RelativeLayout
        android:id="@+id/Rel_Extra_plus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@drawable/newbackground"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >
          <ImageView
        android:id="@+id/no_extra_imag"           
        android:layout_width="15dp"		
        android:layout_height="20dp"
        android:layout_centerInParent="true"
               android:alpha="0.8"
        android:src="@drawable/add_aroow" />
            
			 <TextView
            android:id="@+id/tv_noextra_pluse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
android:textColor="#505050"
            android:textSize="20dp" />
        
     
    </RelativeLayout>
     
    <RelativeLayout
        android:id="@+id/Rel_no_extra_click"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="55"
        android:background="@drawable/newbackground"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="11dp" >

        <TextView
            android:id="@+id/tv_no_extraname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
android:text="Tex1"
             android:textColor="#505050"
            android:textSize="20dp"
             
            />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rel_Extra_minus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="18"
        android:background="@drawable/newbackground_small_corners"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

         <ImageView
             android:id="@+id/tv_noExtra_minus"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:src="@drawable/minus_arrow" />
        

    </RelativeLayout>

</LinearLayout>




