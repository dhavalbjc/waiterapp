<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   
    android:weightSum="100"
     >
     <LinearLayout 
    
    android:id="@+id/linlayout_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DCE1E3"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:weightSum="100">
 
     
    <RelativeLayout
        
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100"
   android:background="#DCE1E3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="11dp" >

        <TextView
           android:id="@+id/txt_coursename" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
android:text="second course"
             android:textColor="#505050"
            android:textSize="16dp"
            
            />
        
    </RelativeLayout>

   
</LinearLayout>
<LinearLayout 
    
    android:id="@+id/lin_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:weightSum="100" >
 <RelativeLayout
        android:id="@+id/Rel_Item_plus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@drawable/newbackground"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >
          <ImageView
        android:id="@+id/no_add_button_imag"           
        android:layout_width="15dp"		
        android:layout_height="20dp"
        android:layout_centerInParent="true"
               android:alpha="0.8"
        android:src="@drawable/add_aroow" />
            
			 <TextView
            android:id="@+id/tv_no_pluse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
android:textColor="#505050"
              android:textSize="20dp" />
        
     
    </RelativeLayout>
     
    <RelativeLayout
        android:id="@+id/Rel_no_item_click"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:background="@drawable/newbackground"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="11dp" >

        <TextView
            android:id="@+id/tv_no_itemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
android:text="Tex1"
             android:textColor="#505050"
            android:textSize="20dp"
            
            />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rel_Item_minus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="15"

        android:background="@drawable/newbackground_small_corners"
         >

         <ImageView
             android:id="@+id/tv_no_minus"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:alpha="0.8"
       
        android:src="@drawable/minus_arrow" />
        

    </RelativeLayout>

</LinearLayout>

 <RelativeLayout

	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	 
	android:layout_alignParentLeft="true"
	android:background="#DCE1E3"
android:orientation="vertical"
android:weightSum="100">

    <ListView
        android:id="@+id/lv_sextra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent" >
    </ListView>

</RelativeLayout>

</LinearLayout>