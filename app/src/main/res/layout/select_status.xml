<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F92D2"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/txt_status_itemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="item name"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:text="Mark"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/lin_cooking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_right_back_selector"
            android:orientation="vertical"
            android:paddingBottom="10dp"
             android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/img_status_cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:padding="2dp"
                android:src="@drawable/status_coking" />

            <TextView
                android:id="@+id/txt_cooking"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:padding="0dp"
                android:text="cooking"
                android:textColor="#505050"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
    android:id="@+id/lin_ready"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_right_back_selector"
            android:orientation="vertical"
            android:paddingBottom="10dp"
             android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <ImageView
               android:id="@+id/img_status_ready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:padding="2dp"
                android:src="@drawable/status_ready" />

            <TextView
                android:id="@+id/txt_ready"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:text="ready"
                android:textColor="#505050"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
        android:id="@+id/lin_served"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_back_selector"
            android:orientation="vertical"
            android:paddingBottom="10dp"
             android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <ImageView
               android:id="@+id/img_status_served"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:padding="2dp"
                android:src="@drawable/status_served" />

            <TextView
                android:id="@+id/txt_served"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:padding="0dp"
                android:text="served"
                android:textColor="#505050"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_cancelled"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_back_selector"
            android:orientation="vertical"
            android:paddingBottom="10dp"
             android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <ImageView
              android:id="@+id/img_status_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:padding="5dp"
                android:src="@drawable/status_cancelled_three" />

            <TextView
                android:id="@+id/txt_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:text="cancelled"
                android:textColor="#505050"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

   

</LinearLayout>