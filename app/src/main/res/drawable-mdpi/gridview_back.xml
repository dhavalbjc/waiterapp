<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#999999" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp"
                android:top="0dp" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"
                android:radius="0dp" android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />

            <gradient android:angle="270" android:endColor="#2f6699"
                android:startColor="#449def" />


        </shape>
    </item>
  
<item 
    android:bottom="1dp"
        android:left="0dp"
        android:right="1dp"
        android:top="0dp">        
<shape>
     <stroke android:width="0.5dp" android:color="#CABBBBBB" />
    <corners android:radius="0dp"/>
    <padding android:bottom="0dp"
             android:left="0dp"
             android:right="0dp"
             android:top="0dp"/>
  <gradient android:angle="270" android:endColor="#2f6699"
                android:startColor="#449def" />
    </shape>
    </item>
</selector>
